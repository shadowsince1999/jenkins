{
  "family": "shadow",
  "containerDefinitions": [
    {
      "name": "shadow",
      "image": "147397011329.dkr.ecr.us-east-1.amazonaws.com/shadow:shadow",
      "essential": true,
      "memory": 512,  // Container-specific memory
      "cpu": 256,     // Container-specific CPU
      "portMappings": [
        {
          "containerPort": 80, // Only containerPort needed for Fargate
          "hostPort": 80,      // HostPort is not needed for Fargate
          "protocol": "tcp"
        }
      ]
    }
  ],
  "requiresCompatibilities": [
    "FARGATE" // Ensure FARGATE is specified
  ],
  "networkMode": "awsvpc", // Use awsvpc for Fargate
  "cpu": "256",            // Task-level CPU
  "memory": "512"          // Task-level memory
}

